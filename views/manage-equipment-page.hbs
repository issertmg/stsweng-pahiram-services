<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">

  <!-- Custom Styles -->
  <link href="/css/styles.css" rel="stylesheet">
  <link href="/css/styles-equipment.css" rel="stylesheet">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet">

  <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">

   

  <script src="/js/validator.min.js" type="text/javascript"></script>

  <title>Manage Equipment</title>
  <link rel="icon" href="/static/logo.png">
</head>

<body>
  <div class="container-fluid">
    <div class="main-container row">
      {{> sidenav act=active sb=sidebarData}}

      <div class="main col-md-9 col-lg-10 ml-sm-auto p-0">
        {{> topnav}}

        <main role="main" class="pt-3 px-4">
          <div class="row col-lg-10 mx-auto px-0">

            <div class="col-12 d-flex flex-wrap justify-content-between mb-5">
              <h1 class="mb-4">Manage equipment</h1>
              <a id="addEquipment" data-toggle="modal" href="#addEquipmentModal" class="btn btn-primary mb-auto d-flex align-items-center">
                <div class="icon mr-2 white" id="add"></div>Add equipment</a>
            </div>

            {{#if equipmentList}}
            <div class="col-lg-12 row align-items-end mx-auto px-0">
              {{#each equipmentList}}
              <div class="col-lg-4 col-md-6 col-12">
                <div class="card equipment-card">
                  <div class="equipment-img mx-auto" style="background-image: url({{imageURL}})">
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <div class="card-text mb-3">
                         <div>
                            <span class="card-text-label">Brand: </span><span>{{brand}}</span>
                        </div>
                        <div>
                            <span class="card-text-label">Model: </span><span>{{model}}</span>
                        </div>
                        <div>
                            <span class="card-text-label">Reserved: </span><span>{{onRent}}</span>
                        </div>
                    </div>
                  </div>
                  <div class="card-footer d-flex flex-row justify-content-between align-items-center">
                    <span class="badge badge-pill">{{subtract quantity onRent}}/{{quantity}} available</span>
                    <a data-toggle="modal" href="#editEquipmentModal" data-equipmentid="{{_id}}" data-equipmentname="{{name}}" data-equipmentbrand="{{brand}}" data-equipmentmodel="{{model}}" data-equipmentquantity="{{quantity}}">
                      <div class="icon white" id="edit"></div>
                    </a>
                    <div class="color-container"></div>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
            {{else}}
            <div class="font-italic d-flex mx-auto mt-5">
              There are no equipment listed. Add a new equipment by clicking the button above.
            </div>
            {{/if}}
          </div>
        </main>
        {{> footer}}
      </div>
    </div>
  </div>

  <div class="modal fade" id="addEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel">Add Equipment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="form-horizontal col-lg-10 mx-auto" method="POST" action="/manage-equipment/"
            id="addEquipForm" enctype="multipart/form-data">
            <div class="alert alert-warning" role="alert" id="formAlert">
                Please fill up all the blank fields.
            </div>
            <div class="alert alert-warning" role="alert" id="formLetterAlert">
                Name and brand field should at least contain 1 letter.
            </div>
            <div class="alert alert-warning" role="alert" id="formQuantityAlert">
                Quantity should be a whole number greater than 0.
            </div>
            <div class="alert alert-warning" role="alert" id="formPicAlert">
                Image file extension should be ".png"
            </div>
            <div class="form-group form-inline input-group">
              <label for="add-equipment-name" class="col-lg-4 justify-content-start p-0">Name</label>
              <input id="add-equipment-name" type="text" class="form-control mb-2 col-lg-8" placeholder="Enter equipment name" name="name" required>
            </div>
            <div class="form-group form-inline input-group">
                <label for="add-equipment-brand" class="col-lg-4 justify-content-start p-0">Brand</label>
                <input type="text" class="form-control mb-2 col-lg-8" id="add-equipment-brand" placeholder="Enter equipment brand" name="brand" required>
            </div>
            <div class="form-group form-inline input-group">
                <label for="add-equipment-model" class="col-lg-4 justify-content-start p-0">Model</label>
                <input type="text" class="form-control mb-2 col-lg-8" id="add-equipment-model" placeholder="Enter equipment model" name="model" required>
            </div>
            <div class="form-group form-inline input-group">
              <label for="add-equipment-ct" class="col-lg-4 justify-content-start p-0">Amount on stock</label>
              <input id="add-equipment-ct" type="number" class="form-control mb-2 col-lg-8" placeholder="Enter number of stocks" name="count" min="1" max="1000" required>
            </div>
            <div class="form-group form-inline input-group">
              <label for="add-equipment-pic" class="col-lg-4 justify-content-start p-0">Image (optional)</label>
              <input id="add-equipment-pic" type="file" class="form-control-file mb-2 col-lg-8" name="equipmentImage" accept="image/png">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="addEquipmentButton">Add</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel">Edit Equipment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="form-horizontal col-lg-10 mx-auto" method="POST" action="/manage-equipment/update"
            id="editEquipForm" enctype="multipart/form-data">
            <!--FIXME: -->
            <input type="hidden" name="equipmentid" id="editHiddenEquipID">
            <div class="alert alert-warning" role="alert" id="formUpdateAlert">
            Please fill up the name, brand, model, and quantity field.
            </div>
            <div class="alert alert-warning" role="alert" id="formUpdateLetterAlert">
                Name and brand field should at least contain 1 letter.
            </div>
            <div class="alert alert-warning" role="alert" id="formUpdateQuantityAlert">
                Quantity should be a whole number greater than 0.
            </div>
            <div class="alert alert-warning" role="alert" id="formUpdatePicAlert">
                Image file extension should be ".png"
            </div>
            <div class="col-12 px-0" id="availableAlert">
              <div class="alert alert-danger" role="alert">
                <strong>Action unsuccessful!</strong> The quantity should not be less than the number of equipment on rent. 
              </div>
            </div>

            <div class="form-group form-inline input-group">
              <label for="edit-equipment-name" class="col-lg-4 justify-content-start p-0">Name</label>
              <input type="text" class="form-control mb-2 col-lg-8" id="edit-equipment-name" placeholder="Enter equipment name" name="name" required>
            </div>

              <div class="form-group form-inline input-group">
                  <label for="edit-equipment-brand" class="col-lg-4 justify-content-start p-0">Brand</label>
                  <input type="text" class="form-control mb-2 col-lg-8" id="edit-equipment-brand" placeholder="Enter equipment brand" name="brand" required>
              </div>
              <div class="form-group form-inline input-group">
                  <label for="edit-equipment-model" class="col-lg-4 justify-content-start p-0">Model</label>
                  <input type="text" class="form-control mb-2 col-lg-8" id="edit-equipment-model" placeholder="Enter equipment model" name="model" required>
              </div>


              <div class="form-group form-inline input-group">
              <label for="edit-equipment-ct" class="col-lg-4 justify-content-start p-0">Amount on stock</label>
              <input type="number" class="form-control mb-2 col-lg-8" id="edit-equipment-ct" placeholder="Enter number of stocks" name="count" min="1" max="1000" required>
            </div>
            <div class="form-group form-inline input-group">
              <label for="edit-equipment-pic" class="col-lg-4 justify-content-start p-0">Image (optional)</label>
              <input type="file" class="form-control-file mb-2 col-lg-8" id="edit-equipment-pic" name="equipmentImage" accept="image/png">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <a class="btn btn-warning mr-auto" data-dismiss="modal" data-toggle="modal" href="#delEquipmentModal">Delete</a>
          <button type="button" class="btn btn-outline" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="editEquipButton">Save</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="delEquipmentModal" tabindex="-1" role="dialog" aria-labelledby="equipmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="equipmentModalLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body col-lg-10 mx-auto">
          <form method="POST" action="/manage-equipment/delete" id="delEquipForm">
            <input type="hidden" name="equipmentid" id="delHiddenEquipID">
          </form>
          <h5 id="deleteHeader">Do you really want to delete this equipment?</h5>
          <div class="col-12 px-0" id="onRentAlert">
              <div class="alert alert-warning" role="alert">
                <strong>Action unsuccessful!</strong> Equipment cannot be deleted while still on rent.
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="deleteEquipButton">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/js/styles.js"></script>
  <script type="text/javascript" src="/js/manage-equipment.js"></script>

</body>

</html>
